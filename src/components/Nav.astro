<style>
  .nav {
    display: flex;
    flex-direction: column;
    flex-wrap: wrap;
    position: absolute;
    top: 50%;
    transform: translateY(-50%);
    left: 8px;
    backdrop-filter: blur(2px);
    background-color: transparent;
    width: 48px;
    height: auto;
    align-items: center;
    align-content: center;
    border-radius: 8px;
    z-index: 3;
    gap: 4px;
    padding: 6px 2px;
    background-color: var(--bg-secondary);
    transition: all 0.5s fade;
  }

  /*.nav:hover {
    box-shadow: 0px 0px 3px var(--main-color);
    transition: all 0.5s fade;

  }*/

  .nav * {
    margin-bottom: 1px;
    margin-top: 1px;
  }

  .nav a:has(.navImage) {
    width: fit-content;
    height: auto;
  }

  .nav .navImage {
    width: 36px;
    height: 36px;
  }

  .nav .navImage:hover {
    -webkit-animation: rotate-center 0.25s linear forwards;
    animation: rotate-center 0.25s linear forwards;
  }

  .nav .navItem svg[data-lucide] {
    width: 32px; /* or any size you want */
    height: 32px;
    stroke-width: 2; /* optional: make lines thicker */
  }

  .nav .navItem svg[data-lucide]:hover {
    stroke: var(--main-color);
  }

  /*
